-# .main__chat
.main__chat__info
  .main__chat__info--talker
    = message.user.name
  .main__chat__info--date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
.main__chat__text
  - if message.content.present?
    %p.lower-message__content
      = message.content
  = image_tag message.image.url, class: 'main__chat__text' if message.image.present?
