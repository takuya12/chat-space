//jbuilderで記載したmessage.idが使えるようカスタムデータ属
.message{"data-message-id": "#{message.id}"}
  .main__chat__info
    .main__chat__info--talker
      = message.user.name
    .main__chat__info--date
      = message.created_at.strftime("%Y年%m月%d日 %H時%M分")
  .main__chat__text
    - if message.content.present?
      %p.lower-message__content
        = message.content
    = image_tag message.image.url, class: 'main__chat__text' if message.image.present?
